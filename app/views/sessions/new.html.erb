<div class="container">
  <div class="row lg-margin-top">
    <div class="col-xs-6 col-xs-offset-3 text-align">
      <img src="/assets/logo.png" />
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Sign In</h1>
    </div>
  </div>

  <div class="row">
    <div class="relative col-xs-10 col-xs-offset-1">
      <div class="col-xs-6 col-xs-offset-3">
        <form class="sign-up-form" action="/session" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

          <div class="form-group">
            <label class="label-text">Username</label>
            <input type="text" class="form-control" name="user[username]">
          </div>

          <div class="form-group">
            <label class="label-text">Password</label>
            <input type="password" class="form-control" name="user[password]">
          </div>

          <label class="label-text"><input type="checkbox" class="checkbox-input">&nbsp;&nbsp;Remember Me</label>

          <input type="submit" value="Sign In" class="btn btn-custom">
          <a class="forgot-password" href="#">Forgot Password?</a>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <p class="no-account">Don't have an account? <span><a href="/users/new">Sign up now!</a></p>
    </div>
  </div>
</div>
